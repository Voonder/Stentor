<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/margin_app_small"
	android:layout_marginTop="@dimen/margin_app_small"
	android:minHeight="48dp"
	card_view:cardCornerRadius="4dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_app_small"
			android:layout_marginStart="@dimen/margin_app"
			android:layout_marginTop="@dimen/margin_app"
			android:text="@string/help_feedback_popular"
			android:textColor="#8A000000"
			style="@android:style/TextAppearance.Material.Body2"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/item_help_feedback_plus_layout1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:orientation="vertical">

				<ImageView
					android:layout_width="@dimen/icon_size"
					android:layout_height="@dimen/icon_size"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/margin_app"
					android:contentDescription="@string/image_content"
					android:src="@drawable/file_document_box"/>

				<TextView
					style="@android:style/TextAppearance.Material.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginEnd="@dimen/margin_app"
					android:layout_marginStart="72dp"
					android:layout_marginTop="@dimen/margin_app"
					android:text="@string/help_feedback_pop1"/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/item_help_feedback_plus_layout2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:orientation="vertical">

				<ImageView
					android:layout_width="@dimen/icon_size"
					android:layout_height="@dimen/icon_size"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/margin_app"
					android:contentDescription="@string/image_content"
					android:src="@drawable/file_document_box"/>

				<TextView
					style="@android:style/TextAppearance.Material.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginEnd="@dimen/margin_app"
					android:layout_marginStart="72dp"
					android:layout_marginTop="@dimen/margin_app"
					android:text="@string/help_feedback_pop2"/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/item_help_feedback_plus_layout3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:orientation="vertical">

				<ImageView
					android:layout_width="@dimen/icon_size"
					android:layout_height="@dimen/icon_size"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/margin_app"
					android:contentDescription="@string/image_content"
					android:src="@drawable/file_document_box"/>

				<TextView
					style="@android:style/TextAppearance.Material.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginEnd="@dimen/margin_app"
					android:layout_marginStart="72dp"
					android:layout_marginTop="@dimen/margin_app"
					android:text="@string/help_feedback_pop3"/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/item_help_feedback_plus_layout4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:orientation="vertical">

				<ImageView
					android:layout_width="@dimen/icon_size"
					android:layout_height="@dimen/icon_size"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/margin_app"
					android:contentDescription="@string/image_content"
					android:src="@drawable/file_document_box"/>

				<TextView
					style="@android:style/TextAppearance.Material.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginEnd="@dimen/margin_app"
					android:layout_marginStart="72dp"
					android:layout_marginTop="@dimen/margin_app"
					android:text="@string/help_feedback_pop4"/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/item_help_feedback_plus_layout5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:orientation="vertical">

				<ImageView
					android:layout_width="@dimen/icon_size"
					android:layout_height="@dimen/icon_size"
					android:layout_centerVertical="true"
					android:layout_marginStart="@dimen/margin_app"
					android:contentDescription="@string/image_content"
					android:src="@drawable/file_document_box"/>

				<TextView
					style="@android:style/TextAppearance.Material.Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginEnd="@dimen/margin_app"
					android:layout_marginStart="72dp"
					android:layout_marginTop="@dimen/margin_app"
					android:text="@string/help_feedback_pop5"/>
			</RelativeLayout>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/black_secondary_text"/>

		<Button
			android:id="@+id/item_help_feedback_plus_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="start|center_vertical"
			android:paddingLeft="@dimen/margin_app"
			android:paddingRight="@dimen/margin_app"
			android:text="@string/help_feedback_browse_article"
			android:textColor="@color/material_drawer_accent"/>

	</LinearLayout>

</android.support.v7.widget.CardView>