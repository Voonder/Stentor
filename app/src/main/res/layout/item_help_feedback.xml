<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_app_small"
    android:layout_marginTop="@dimen/margin_app_small"
    android:minHeight="@dimen/item_min_height"
    card_view:cardCornerRadius="@dimen/corner_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_help_feedback_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_app"
            android:contentDescription="@string/image_content"
            android:src="@drawable/library" />

        <TextView
            android:id="@+id/item_help_feedback_name"
            style="@android:style/TextAppearance.Material.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="@dimen/margin_app"
            android:layout_marginStart="72dp"
            android:layout_marginTop="@dimen/margin_app"
            android:text="@string/help_feedback_libraries" />
    </RelativeLayout>
</android.support.v7.widget.CardView>